<div class="position-relative">
  <div class="card-category card-large">
    <h1><%= @racket.name %></h1>
  </div>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <div>
      <%= link_to 'add a racket', new_racket_path(@racket), class: 'btn btn-flat' %>
      <%= link_to 'detete this list', racket_path(@racket), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this racket?' } %>
    </div>
  </div>
  <div class="row my-2">
    <% @rackets.each do |racket| %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag racket.image_url, alt: racket.name %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= racket.name %>
            <small class="text-muted"><%= racket.description %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
