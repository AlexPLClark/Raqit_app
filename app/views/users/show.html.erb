<div class="container">
  <h1 style="color: #F8F9FA"> Dashboard </h1>

  <h3 style="color: #F8F9FA">Welcome to your profile <%= @user.first_name%></h3>

  
  <div class="py-5">
  <h4 style="color: #F8F9FA"> Your Rackets </h4>
    <div class="row mb-3">    
      <% @user.rackets.each do |racket| %>
        <div class="col-sm-6 col-md-4">
          <%= link_to racket_path(racket), class:'text-decoration-none' do %>
            <div class="card-racket">
              <img src="https://images-na.ssl-images-amazon.com/images/I/51cxohHoU%2BL._AC_SL1010_.jpg" class="card-racket-img"/>
              <div class="card-racket-footer">
                <div>
                  <h2><%= link_to 'Edit', edit_racket_path %></h2>
                  <% unless racket.bookings.any? %>
                    <h2><%= link_to 'Delete', racket_path(racket), method: :delete, data: { confirm: "Are you sure?" } %></h2>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <h4 style="color: #F8F9FA"> Your Bookings </h4>
  <div class="bookings">
    <% @user.bookings.each do |booking| %>
      <div class="card">
        <div class="information">
          <h5> <%=booking.racket.name%></h5>
          <p> Pick up date: <%= booking.start_date %> <br> Drop off date: <%=booking.end_date%></p>
        </div>
        <div class="card-racket-footer">
          <div class="links">
            <h2><%= link_to "Edit", edit_booking_path(booking) %></h2>
            <h2><%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

          