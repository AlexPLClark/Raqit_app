<h1> Dashboard </h1>

<h3>Welcome to your profile <%= @user.first_name%></h3>

<h4> Your Rackets </h4>
<%= link_to "Add a Racket", new_racket_path %>
<div class="container py-5">
  <div class="row mb-3">
    <% @user.rackets.each do |racket| %>
      <div class="col-sm-6 col-md-4">
        <%= link_to racket_path(racket), class:'text-decoration-none' do %>
          <div class="card-racket">
            <img src="https://images-na.ssl-images-amazon.com/images/I/51cxohHoU%2BL._AC_SL1010_.jpg" class="card-racket-img"/>
            <div class="card-racket-footer">
              <div>
                <h2><%= link_to 'Edit Racket', edit_racket_path %></h2>
                <h2><%= link_to 'Delete Racket', racket_path(racket), method: :delete, data: { confirm: "Are you sure?" } %></h2>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<h4> Your Bookings </h4>

<div class="bookings">
  <% @user.bookings.each do |booking| %>
    <div class="card">
      <div class="information">
        <h5> <%=booking.racket.name%></h5>
        <p> Pick up date: <%= booking.start_date %> <br> Drop off date: <%=booking.end_date%></p>
      </div>
      <ul class="links">
        <li><%= link_to "Edit", edit_booking_path(booking) %></li>
        <li><%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %></li>
      </ul>
    </div>
  <% end %>
</div>
